<UserControl x:Class="testpro.Views.Viewer3D"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
            mc:Ignorable="d" 
            d:DesignHeight="600" d:DesignWidth="800"
            Background="LightBlue"
            Focusable="True">

    <Grid>
        <!-- WPF 기본 Viewport3D 사용 -->
        <Viewport3D x:Name="MainViewport" 
                   ClipToBounds="True">
            <!-- 카메라 설정 -->
            <Viewport3D.Camera>
                <PerspectiveCamera x:Name="MainCamera"
                                  Position="50,50,50" 
                                  LookDirection="-1,-1,-1" 
                                  UpDirection="0,0,1"
                                  FieldOfView="60"
                                  NearPlaneDistance="0.1"
                                  FarPlaneDistance="1000"/>
            </Viewport3D.Camera>

            <!-- 부드러운 조명 설정 (매트한 느낌) -->
            <ModelVisual3D>
                <ModelVisual3D.Content>
                    <Model3DGroup>
                        <!-- 주변광 (부드럽게) -->
                        <AmbientLight Color="#E0E0E0" />

                        <!-- 주 방향광 (위에서 아래로, 부드럽게) -->
                        <DirectionalLight Color="#F0F0F0" Direction="-0.3,-0.3,-1" />

                        <!-- 보조 방향광 (측면, 약하게) -->
                        <DirectionalLight Color="#D0D0D0" Direction="1,0,-0.5" />
                    </Model3DGroup>
                </ModelVisual3D.Content>
            </ModelVisual3D>

            <!-- 바닥 그리드 -->
            <ModelVisual3D x:Name="FloorGridVisual"/>

            <!-- 3D 모델들이 동적으로 추가될 컨테이너 -->
            <ModelVisual3D x:Name="WallsContainer"/>
            <ModelVisual3D x:Name="FloorsContainer"/>

        </Viewport3D>

        <!-- 마우스 상호작용을 위한 투명한 Border -->
        <Border Background="Transparent"
               MouseLeftButtonDown="Viewport_MouseLeftButtonDown"
               MouseMove="Viewport_MouseMove"
               MouseLeftButtonUp="Viewport_MouseLeftButtonUp"
               MouseRightButtonDown="Viewport_MouseRightButtonDown"
               MouseRightButtonUp="Viewport_MouseRightButtonUp"
               MouseWheel="Viewport_MouseWheel"
               Focusable="True"/>

        <!-- 3D 뷰 컨트롤 패널 -->
        <StackPanel Orientation="Horizontal" 
                   HorizontalAlignment="Right" 
                   VerticalAlignment="Top" 
                   Margin="10">

            <Border Background="White" 
                   CornerRadius="5" 
                   Padding="5"
                   Opacity="0.95"
                   BorderBrush="Gray"
                   BorderThickness="1">
                <StackPanel Orientation="Horizontal">
                    <Button Content="정면" 
                           Margin="2" 
                           Padding="8,4"
                           MinWidth="50"
                           Click="FrontView_Click"
                           ToolTip="정면 뷰 (F)"/>
                    <Button Content="측면" 
                           Margin="2" 
                           Padding="8,4"
                           MinWidth="50"
                           Click="SideView_Click"
                           ToolTip="측면 뷰 (S)"/>
                    <Button Content="상단" 
                           Margin="2" 
                           Padding="8,4"
                           MinWidth="50"
                           Click="TopView_Click"
                           ToolTip="상단 뷰 (T)"/>
                    <Separator Margin="5,0"/>
                    <Button Content="아이소메트릭" 
                           Margin="2" 
                           Padding="8,4"
                           MinWidth="80"
                           Click="IsometricView_Click"
                           ToolTip="3D 아이소메트릭 뷰 (I)"/>
                    <Button Content="초기화" 
                           Margin="2" 
                           Padding="8,4"
                           MinWidth="50"
                           Click="ResetView_Click"
                           ToolTip="뷰 초기화 (R)"/>
                    <Button Content="전체보기" 
                           Margin="2" 
                           Padding="8,4"
                           MinWidth="60"
                           Click="ZoomExtents_Click"
                           FontWeight="Bold"
                           ToolTip="모델 전체 보기 (Z)"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- 3D 뷰 정보 패널 -->
        <Border Background="White"
               CornerRadius="5"
               Padding="10"
               Opacity="0.95"
               HorizontalAlignment="Left"
               VerticalAlignment="Bottom"
               Margin="10"
               BorderBrush="Gray"
               BorderThickness="1">

            <StackPanel Orientation="Vertical">
                <TextBlock Text="3D 뷰 컨트롤:" 
                          FontWeight="Bold" 
                          Margin="0,0,0,5"/>
                <TextBlock Text="• 좌클릭 + 드래그: 회전" 
                          Margin="0,1"
                          FontSize="11"/>
                <TextBlock Text="• 우클릭 + 드래그: 이동" 
                          Margin="0,1"
                          FontSize="11"/>
                <TextBlock Text="• 마우스 휠: 줌 인/아웃" 
                          Margin="0,1"
                          FontSize="11"/>
                <Separator Margin="0,5"/>
                <TextBlock Text="성능 정보:" 
                          FontWeight="Bold" 
                          Margin="0,0,0,2"/>
                <TextBlock x:Name="PerformanceText" 
                          Text="벽: 0개, 방: 0개" 
                          Margin="0,1"
                          FontSize="11"/>
            </StackPanel>
        </Border>

        <!-- 좌표 정보 표시 -->
        <Border Background="White"
               CornerRadius="5"
               Padding="5"
               Opacity="0.95"
               HorizontalAlignment="Right"
               VerticalAlignment="Bottom"
               Margin="10"
               BorderBrush="Gray"
               BorderThickness="1">

            <StackPanel Orientation="Vertical">
                <TextBlock x:Name="CameraInfoText" 
                          Text="카메라: (50, 50, 50)" 
                          FontSize="10"/>
                <TextBlock x:Name="LookDirectionText" 
                          Text="방향: (-1, -1, -1)" 
                          FontSize="10"/>
                <TextBlock x:Name="ZoomLevelText" 
                          Text="줌: 100%" 
                          FontSize="10"/>
            </StackPanel>
        </Border>

        <!-- 로딩 표시기 -->
        <Border x:Name="LoadingIndicator"
               Background="Black"
               Opacity="0.5"
               Visibility="Collapsed">
            <StackPanel HorizontalAlignment="Center"
                       VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True"
                           Width="200"
                           Height="20"/>
                <TextBlock Text="3D 모델 생성 중..."
                         Foreground="White"
                         HorizontalAlignment="Center"
                         Margin="0,10,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>